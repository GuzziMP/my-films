<window>
  <controls>
    <control>
      <description>Dummy Label for Films View</description>
      <type>label</type>
      <id>36</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <visible>false</visible>
      <focusable>no</focusable>
      <!-- to make a control visible only when you are in FILMS VIEW (Movies) do this: <visible>control.isvisible(36)</visible> -->
      <!-- to make a control invisible when you are in FILMS VIEW (Movies) do this: <visible>!control.isvisible(36)</visible> -->
    </control>
    <control>
      <description>Dummy Label for Grouped View</description>
      <type>label</type>
      <id>37</id>
      <posX>-50</posX>
      <posY>-50</posY>3
      <visible>false</visible>
      <focusable>no</focusable>
      <!-- to make a control visible only when you are in GROUP VIEW (Year, Category, etc.) do this: <visible>control.isvisible(37)</visible> -->
      <!-- to make a control invisible when you are in GROUP VIEW (Year, Category, etc.) do this: <visible>!control.isvisible(37)</visible> -->
    </control>
