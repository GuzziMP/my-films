<window>
  <controls>

    <!-- LIST and BIG ICON LIST VIEW -->
    <control>
      <description>Backdrop Overlay - ListView</description>
      <type>image</type>
      <id>0</id>
      <posX>815</posX>
      <posY>48</posY>
      <width>948</width>
      <height>766</height>
      <texture>bg_facade.png</texture>
      <visible>[facadeview.list|facadeview.album]</visible>
      <shouldCache>true</shouldCache>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>847</posX>
      <posY>47</posY>
      <width>433</width>
      <height>53</height>
      <texture>bg_facade_line_nofocus.png</texture>
      <colordiffuse>77ffffff</colordiffuse>
      <visible>[facadeview.list|facadeview.album]</visible>
      <shouldCache>true</shouldCache>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>Total number of movies</description>
      <type>label</type>
      <id>2073</id>
      <posX>865</posX>
      <posY>664</posY>
      <font>font16</font>
      <align>left</align>
      <textcolor>60ffffff</textcolor>
      <label>#myfilms.nbobjects.value #myfilms.nbobjects.unit</label>
      <visible>[facadeview.list|facadeview.album]</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>Selected item and total items</description>
      <type>label</type>
      <id>0</id>
      <posX>1265</posX>
      <posY>693</posY>
      <font>font12</font>
      <align>right</align>
      <textcolor>60ffffff</textcolor>
      <label>#selectedindex/#itemcount #itemtype</label>
      <visible>string.equals(#selectedindex)+string.equals(#itemcount)+[facadeview.list|facadeview.album]</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>Current program title</description>
      <type>label</type>
      <id>0</id>
      <posX>30</posX>
      <posY>485</posY>
      <width>750</width>
      <font>font22</font>
      <label>#(iif(neq(#myfilms.user.mastertitle.value,''),#myfilms.user.mastertitle.value,'#selecteditem')) #(iif(neq(#myfilms.user.mastertitle.groupcount,''),'[#myfilms.user.mastertitle.groupcount]',''))</label>
      <visible>[facadeview.list|facadeview.album]+control.hasfocus(50)</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>Category value</description>
      <type>label</type>
      <id>0</id>
      <posX>30</posX>
      <posY>527</posY>
      <width>750</width>
      <label>#myfilms.db.category.value</label>
      <textcolor>90FFFFFF</textcolor>
      <visible>!control.isvisible(34)+[facadeview.list|facadeview.album]+control.hasfocus(50)</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>Runtime value</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>30</posX>
      <posY>559</posY>
      <width>750</width>
      <label>#(iif(neq(#myfilms.db.year.value,''),'#myfilms.db.year.value - ',''))#(iif(neq(#myfilms.db.length.value,''),'#myfilms.db.length.value #myfilms.db.length.unit',''))</label>
      <textcolor>90FFFFFF</textcolor>
      <visible>!string.equals(#myfilms.user.mastertitle,)+!player.hasmedia+[facadeview.list|facadeview.album]+control.hasfocus(50)</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>RatingValue</description>
      <type>label</type>
      <id>0</id>
      <posX>305</posX>
      <posY>452</posY>
      <label>#(iif(neq(#myfilms.db.rating.value,''),'(#myfilms.db.rating.value)',''))</label>
      <font>font10</font>
      <align>right</align>
      <textcolor>6fffffff</textcolor>
      <visible>!control.isvisible(34)+!player.hasmedia+[facadeview.list|facadeview.album]+control.hasfocus(50)</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <type>textboxscrollup</type>
      <description>Description value</description>
      <id>1025</id>
      <posX>30</posX>
      <posY>593</posY>
      <width>800</width>
      <height>75</height>
      <font>font12</font>
      <textcolor>FFFFFFFF</textcolor>
      <label>#myfilms.db.description.value</label>
      <visible>!player.hasmedia+[facadeview.list|facadeview.album]+control.hasfocus(50)</visible>
      <seperator>: : :</seperator>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>

