<window>
  <controls>

    <!-- THUMBS VIEW -->
    <control>
      <type>label</type>
      <description>Title (Thumbs)</description>
      <id>0</id>
      <posX>30</posX>
      <posY>30</posY>
      <width>1220</width>
      <align>center</align>
      <font>font20</font>
      <label>#(iif(neq(#myfilms.user.mastertitle.value,''),#myfilms.user.mastertitle.value,'#selecteditem')) #(iif(neq(#myfilms.user.mastertitle.groupcount,''),'[#myfilms.user.mastertitle.groupcount]',''))</label>
      <visible>[facadeview.smallicons|facadeview.largeicons]+[control.hasfocus(50)]</visible>
      <animation effect="fade" time="250">visiblechange</animation>
    </control>
    <control>
      <type>label</type>
      <description>Year and Genre and Runtime (Thumbs)</description>
      <id>0</id>
      <posX>30</posX>
      <posY>57</posY>
      <width>1220</width>
      <align>center</align>
      <font>font12</font>
      <textcolor>60ffffff</textcolor>
      <label>#(iif(neq(#myfilms.db.year.value,''),'#myfilms.db.year.value - ',''))#(iif(neq(#myfilms.db.category.value,''),'#myfilms.db.category.value - ',''))#(iif(neq(#myfilms.db.length.value,''),'#myfilms.db.length.value #myfilms.db.length.unit',''))#(iif(neq(#myfilms.db.rating.value,'0'),' - #myfilms.db.rating.value',''))</label>
      <visible>[facadeview.smallicons|facadeview.largeicons]+[control.hasfocus(50)]</visible>
      <animation effect="fade" time="250">visiblechange</animation>
    </control>
  </controls>
</window>