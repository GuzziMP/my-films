        <textcolor>FFFFFFFF</textcolor>
        <align>center</align>
    </control>
    <control>
        <description>Exit button</description>
        <type>button</type>
        <id>2</id>
        <posX>1015</posX>
        <posY>175</posY>
        <width>30</width>
        <height>30</height>
        <textureFocus>button_close_focus.png</textureFocus>
        <textureNoFocus>button_close_nofocus.png</textureNoFocus>
        <label>-</label>
        <onleft>3</onleft>
        <onright>3</onright>
        <onup>3</onup>
        <ondown>3</ondown>
    </control>
    <control>
        <description>current active main cover</description>
        <id>0</id>
        <type>image</type>
        <posX>300</posX>
        <posY>230</posY>
        <width>240</width>
        <height>360</height>
        <visible>true</visible>
        <keepaspectratio>yes</keepaspectratio>
        <centered>yes</centered>
        <zoom>yes</zoom>
        <texture flipY="true" diffuse="Thumb_Mask.png">#myfilms.dialogimageselect.selectedthumb</texture>
    </control>
    <control>
        <description>options listcontrol</description>
        <type>listcontrol</type>
        <id>3</id>
        <posX>600</posX>
        <posY>230</posY>
        <width>360</width>
        <height>390</height>
        <spinPosX>975</spinPosX>
        <spinPosY>580</spinPosY>
        <spinCanFocus>no</spinCanFocus>
        <onleft>2</onleft>
        <onright>2</onright>
      </control>
